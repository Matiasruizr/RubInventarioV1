<p id="notice"><%= notice %></p>

<h1>Pinturas</h1>

<table>
  <thead>
    <tr>
      <th>Id pintura</th>
      <th>Color</th>
      <th>Materia 1</th>
      <th>Materia2</th>
      <th>Materia3</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pinturas.each do |pintura| %>
      <tr>
        <td><%= pintura.id_pintura %></td>
        <td><%= pintura.color %></td>
        <td><%= pintura.materia_1 %></td>
        <td><%= pintura.materia2 %></td>
        <td><%= pintura.materia3 %></td>
        <td><%= link_to 'Show', pintura %></td>
        <td><%= link_to 'Edit', edit_pintura_path(pintura) %></td>
        <td><%= link_to 'Destroy', pintura, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

